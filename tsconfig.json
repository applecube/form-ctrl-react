{
  "compilerOptions": {
    "lib": [
      "dom",
      "esnext"
    ],
    "baseUrl": ".",
    "outDir": "dist",
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": false,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": false,
    "verbatimModuleSyntax": false,
    "declaration": true,
    "isolatedDeclarations": true,
    "sourceMap": true,
    "noEmit": false
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}